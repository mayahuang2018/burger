<h1 class="#cfd8dc blue-grey-text text-lighten-4 ">Eat Da Burger!</h1>

{{!-- input area --}}
<div class="row">
    <form class="col s12  m6">
      <div class="row">
        <div class="input-field col s12">
          <input id="bName" type="text" class="materialize-textarea">
          <label for="bName"></label>
          <h5 class="#cfd8dc blue-grey-text text-lighten-4">Enter a burger you want to eat and click the "Submit" button.</h5>
        </div>
      </div>

    <button id="submit" class="waves-effect waves-light btn #546e7a blue-grey darken-1">Submit</button>

    </form>
  </div>

{{!-- new burgers area --}}
<div class="row">
    <div class="col s12 m6">
      <div class="card-panel teal #455a64 blue-grey darken-2">
        <div class="card-content white-text">
          <span class="card-title">Burgers</span>
           {{#each burgers}}
                {{#unless devoured}}
                  {{> burger-block devour=false}}
                {{/unless}}
              {{/each}}
        </div>
        
      </div>
    </div>

{{!-- devoured burgers  --}}
   <div class="col s12 m6">
         {{#each burgers}}
            {{#if devoured}}
           {{> burger-devoured devour=true}}
         {{/if}}
       {{/each}}
      
</div>
</div>



